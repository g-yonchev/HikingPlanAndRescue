@model IEnumerable<HikingPlanAndRescue.Web.ViewModels.Tracks.TrackPublicViewModel>

<h1>Most popular tracks</h1>

@foreach (var item in Model)
{
    <div class="col-md-3">
        @if (User.Identity.IsAuthenticated)
        {
            <div class="col-md-6">
                <button class="glyphicon glyphicon-thumbs-up voteUp" data-id="@item.Id" data-value="1"> </button>
                <br />
                <span id="votesCount" data-id="@item.Id">@item.VotesCount</span>
                <br />
                <button class="glyphicon glyphicon-thumbs-down voteDown" data-id="@item.Id" data-value="-1"> </button>
            </div>
        }
        <div class="col-md-6">
            <h3>@item.Title</h3>
            <p>@item.Author</p>
        </div>
    </div>
}